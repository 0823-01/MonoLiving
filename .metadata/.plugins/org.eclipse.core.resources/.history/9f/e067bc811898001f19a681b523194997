<properties>

	<!-- 리뷰 등록용 쿼리문 -->
	<entry key="insertReview">
		INSERT INTO REVIEW (REVIEW_NO
		                  , PRODUCT_NO
		                  , REVIEW_COMMENT
		                  , REVIEW_STAR
		                  , REVIEW_WRITER)
		             VALUES (SEQ_RNO.NEXTVAL
		                   , ?
		                   , 2
		                   , ?
		                   , ?)
	</entry>
	
	<!-- 리뷰 첨부파일 등록용 쿼리문 -->
	<entry key="insertReviewImage">
		INSERT INTO REVIEW_IMAGE (REVIEW_IMG_NO
		                        , REVIEW_REF_RNO
		                        , REVIEW_ORIGIN_NAME
		                        , REVIEW_CHANGE_NAME
		                        , REVIEW_IMG_PATH)
		                  VALUES (SEQ_IMG_RNO.NEXTVAL
		                        , SEQ_RNO.CURRVAL
		                        , ?
		                        , ?
		                        , ?)
	</entry>
	
	<!-- 리뷰 목록 조회용 쿼리문 -->
	<!--
	<entry key="selectReviewList">
		SELECT REVIEW_NO
